{
  "name": "conjure-typescript-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all clean verify compile",
    "compile": "lerna run compile",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "lint-fix": "lerna run lint-fix",
    "test": "lerna run test",
    "verify": "lerna run verify",
    "circle-publish": "npm-run-all circle-publish:lerna circle-publish:dist",
    "circle-publish:lerna": "lerna publish --skip-git --yes --force-publish=* --repo-version $CIRCLE_TAG",
    "circle-publish:dist": "lerna run publish-dist"
  },
  "devDependencies": {
    "@blueprintjs/tslint-config": "^1.3.1",
    "@types/chai": "^4.0.4",
    "@types/jest": "^22.2.3",
    "chai": "^4.1.2",
    "jest": "^22.4.3",
    "lerna": "^2.2.0",
    "npm-run-all": "^4.1.1",
    "ts-jest": "^22.4.6",
    "tslib": "^1.8.0",
    "tslint": "^5.8.0",
    "typescript": "2.7.2"
  },
  "author": "Palantir Technologies, Inc.",
  "license": "Apache-2.0",
  "private": true
}
